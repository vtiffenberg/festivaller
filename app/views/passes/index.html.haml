.row
  .col.s8
    %h2 Pases
  .col.s4
    .right
      %h2
      = link_to new_discount_path, class: "btn-floating discounts" do
        %i.material-icons redeem
      = link_to new_pass_path, class: "btn-floating btn-large" do
        %i.material-icons add

.row
  .col.s12
    %table.highlight
      %thead
        %tr
          %th Nombre
          %th Precio general
          - @discounts.each do |d|
            %th
              = d.name
              = link_to discount_path(d), method: 'delete', class: 'delete-small' do
                %i.material-icons delete
          %th Color
          %th DescripciÃ³n
          %th

      %tbody
        - @passes.each do |pass|
          %tr.clickable-row{'data-href' => edit_pass_url(pass)}
            %td= pass.name
            %td= pass.price
            - @discounts.each do |d|
              %td= (pass.price - d.percentage / 100 * pass.price).round(2)
            %td
              - if pass.colour.present?
                .btn-floating.chosen-colour{style: "background-color: #{pass.colour}"}
            %td.truncate= pass.description
            %td
              = link_to pass_path(pass), method: 'delete' do
                %i.material-icons delete

