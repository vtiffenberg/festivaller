.row
  .col.s8
    %h2 Inscriptos
  .col.s4
    .right
      %h2
      = link_to upload_registrants_path, class: "btn-floating btn-large" do
        %i.material-icons open_in_browser

.row
  .col.s12
    %table.highlight
      %thead
        %tr
          %th Nombre
          %th Email
          %th Pase
          %th Acreditado

      %tbody
        - @registrants.each do |registrant|
          %tr.clickable-row
            /{'data-href' => edit_event_url(registrant)}
            %td= registrant.name
            %td= registrant.email
            %td= registrant.pass.name
            %td= registrant.accredited
