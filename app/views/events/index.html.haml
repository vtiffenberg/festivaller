.row
  .col.s8
    %h2 Eventos
  .col.s4
    .right
      %h2
      = link_to new_event_path, class: "btn-floating btn-large" do
        %i.material-icons add

.row
  .col.s12
    %table.highlight
      %thead
        %tr
          %th Nombre
          %th Fecha
          %th Inscriptos
          %th Puerta

      %tbody
        - @events.each do |event|
          %tr.clickable-row{'data-href' => edit_event_url(event)}
            %td= event.name
            %td= event.date.strftime('%d/%m %H:%Mhs')
            %td= event.registrants
            %td= event.unregistered_attendees
